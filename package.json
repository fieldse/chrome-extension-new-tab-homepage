{
  "name": "custom-tab-extension",
  "version": "1.0.0",
  "description": "Custom new tab homepage for Chrome / Brave browsers",
  "main": "index.js",
  "scripts": {
    "build": "source .env; echo \"building to ${CSS_BUILD_DIR}...\";npx tailwindcss -i ./src/css/main.css -o ${CSS_BUILD_DIR}/style.css",
    "build:watch": "source .env;echo \"building to ${CSS_BUILD_DIR}. Watching for changes... Ctrl+C to exit\"; npx tailwindcss -i ./src/css/main.css -o ${CSS_BUILD_DIR}/style.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fieldse/custom-chrome-new-tab-page.git"
  },
  "keywords": [
    "chrome",
    "browser-extensions",
    "brave",
    "tab",
    "new-tab",
    "homepage"
  ],
  "author": "matt@mattfields.dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fieldse/custom-chrome-new-tab-page/issues"
  },
  "homepage": "https://github.com/fieldse/custom-chrome-new-tab-page#readme",
  "devDependencies": {
    "tailwindcss": "^3.4.1"
  }
}
